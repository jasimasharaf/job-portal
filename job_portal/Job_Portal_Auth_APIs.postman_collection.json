{
	"info": {
		"name": "Job Portal Authentication APIs",
		"description": "Complete authentication system with email OTP verification",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Register User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"first_name\": \"John\",\n    \"last_name\": \"Doe\",\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\",\n    \"confirm_password\": \"password123\",\n    \"job_role\": \"Software Developer\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/auth/register/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "register", ""]
				}
			}
		},
		{
			"name": "2. Verify Email OTP",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"john@example.com\",\n    \"otp_code\": \"123456\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/auth/verify-email/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "verify-email", ""]
				}
			}
		},
		{
			"name": "3. Resend OTP",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"john@example.com\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/auth/resend-otp/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "resend-otp", ""]
				}
			}
		},
		{
			"name": "4. Login",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"email\": \"john@example.com\",\n    \"password\": \"password123\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/auth/login/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "login", ""]
				}
			}
		},
		{
			"name": "5. Get User Profile",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer YOUR_ACCESS_TOKEN_HERE"
					}
				],
				"url": {
					"raw": "http://127.0.0.1:8000/auth/profile/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "profile", ""]
				}
			}
		},
