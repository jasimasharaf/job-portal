			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"refresh\": \"YOUR_REFRESH_TOKEN_HERE\"\n}"
				},
				"url": {
					"raw": "http://127.0.0.1:8000/auth/token/refresh/",
					"protocol": "http",
					"host": ["127", "0", "0", "1"],
					"port": "8000",
					"path": ["auth", "token", "refresh", ""]
				}
